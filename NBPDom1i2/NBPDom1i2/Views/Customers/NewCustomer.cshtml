@model NBPDom1i2.Models.Customer
@{
    ViewBag.Title = "NewCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.Label("name")
        @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("surname")
        @Html.TextBoxFor(m => m.surname, new { @class = "form-control" })
    </div>
    if ((string)Session["failedRegister"] == "failed")
    {
        Session["failedRegister"] = "success";
        <div class="form-group " style="color:orangered">
            @Html.Label("username")
            @Html.TextBoxFor(m => m.username, new { @class = "form-control" })
        </div>
    }
    else
    {
    <div class="form-group">
        @Html.Label("username")
        @Html.TextBoxFor(m => m.username, new { @class = "form-control" })
    </div>
    }
    <div class="form-group">
        @Html.Label("password")
        @Html.TextBoxFor(m => m.password, new { @class = "form-control", @type = "password" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}

